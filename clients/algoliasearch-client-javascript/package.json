{
  "name": "algoliasearch-client-javascript",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:all": "lerna run build --skip-nx-cache --include-dependencies",
    "build:many": "lerna run build --skip-nx-cache --include-dependencies --scope ${0:-'{@algolia/*,algoliasearch}'}",
    "clean": "lerna run clean --include-dependencies",
    "release:bump": "lerna version ${0:-patch} --no-changelog --no-git-tag-version --no-push --exact --force-publish --yes",
    "release:publish": "ts-node --esm --project tsconfig.script.json scripts/publish.ts",
    "test:size": "bundlesize"
  },
  "devDependencies": {
    "@babel/core": "7.23.2",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-runtime": "7.22.15",
    "@babel/preset-env": "7.22.20",
    "@babel/runtime": "7.23.1",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-node-resolve": "15.2.2",
    "@rollup/plugin-terser": "0.4.4",
    "@types/jest": "29.5.5",
    "@types/node": "18.18.1",
    "@types/rollup-plugin-node-globals": "1.4.2",
    "@types/semver": "7.5.3",
    "bundlesize2": "0.0.31",
    "execa": "8.0.1",
    "lerna": "7.3.0",
    "nx": "16.10.0",
    "rollup": "3.29.4",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-typescript2": "0.36.0",
    "semver": "7.5.4",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">= 14.0.0",
    "yarn": "^3.0.0"
  }
}
